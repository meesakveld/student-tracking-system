{{!-- Button --}}
{{#eq type 'button'}}
<button id="{{id}}" form="{{form}}" class="button {{class}}" {{#if paddingBottom}}style="margin-bottom: 1rem;"{{/if}}>{{ label }}</button>
{{else}}
{{!-- Link --}}
<a href="{{ link }}" id="{{id}}" class="button {{#if class}}{{class}}{{/if}} {{#if paddingBottom}}button--margin{{/if}}">{{ label }}</a>
{{/eq}}
