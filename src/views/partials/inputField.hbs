{{!-- Input field --}}
{{# if viewOnly}}
<div class="input-field input-field--view">
    <input id="{{idValue}}" name="{{name}}" type="{{ type }}" class="input-field__input" placeholder="{{ placeholder }}" readonly value="{{ value }}">
</div>
{{else}}
<div class="input-field">
    <input id="{{idValue}}" name="{{name}}" type="{{ type }}" class="input-field__input" placeholder="{{ placeholder }}" value="{{ value }}">
</div>
{{/if}}