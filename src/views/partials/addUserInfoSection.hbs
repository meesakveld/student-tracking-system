                    <p class="semibold">Achternaam</p>
                    {{> inputField placeholder='Achternaam'}}
                </div>
                <div class="user-info__item">
                    <p class="semibold">E-mailadres</p>
                    {{> inputField placeholder='E-mailadres'}}
                </div>
                <h3>Labels</h3>
                <div class="user-info__item">
                    {{> labelList labels=labels}}
                </div>
            </div>
            <div class="user-info__right">
                <h3>School gerelateerde informatie</h3>
                <div class="user-info__item">
                    <p class="semibold">Klas</p>
