                    <p class="semibold">Studiejaar</p>
                    {{> inputField placeholder='Studiejaar'}}
                </div>
                <div class="user-info__item">
                    <p class="semibold">Status</p>
                    {{> inputField placeholder='Statuut'}}
                </div>
                <div class="user-info__item">
                    <p class="semibold">Rol</p>
                    {{> inputField placeholder='Rol'}}
                </div>
                <div class="user-info__item">
                    <p class="semibold">Trajectcoach</p>
                    {{> inputField placeholder='Trajectcoach'}}
                </div>
                <div class="user-info__item">
                    <p class="semibold">Werkplekcoach</p>
                    {{> inputField placeholder='Werkplekcoach'}}
                </div>
                <div class="user-info__item">
                    <p class="semibold">Werkplekmentor</p>
                    {{> inputField placeholder='Werkplekmentor'}}
                </div>
            </div>
        </div>
        <div class="user-info__button">
            <button class="button">Toevoegen</button>
        </div>