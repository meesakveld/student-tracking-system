{{!-- Update password --}}
<div class="body__inner body--gradient">
    <main>
        <div class="main__inner main__inner--centered">
            <section class="centered">
                <img class="logo-sv--big" src="/assets/images/logo-big.svg" alt="logo_sv">
                <form class="login-form" action="/update-password/{{token}}" method="POST">
                    <h1>Verander wachtwoord</h1>
                    <p class="input-field__error">{{flash}}</p>

                    {{#each inputs}}
                    <div class="input-field">
                        <p class="input-field__error">{{err}}</p>
                        <input type="{{type}}" name="{{name}}" class="input-field__input" placeholder="{{label}}"
                            value="{{value}}">
                    </div>
                    {{/each}}

                    <div class="actions">
                        <button type="submit" class="button">Verander wachtwoord</button>
                    </div>

                </form>
            </section>
        </div>
    </main>
</div>